{
  "id": "samsungce.softenerAutoReplenishment",
  "version": 1,
  "status": "proposed",
  "name": "Softener Auto Replenishment",
  "ephemeral": false,
  "attributes": {
    "regularSoftenerType": {
      "schema": {
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "enum": ["none", "liquid", "capsule", "drySheet"]
          }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "regularSoftenerAlarmEnabled": {
      "schema": {
        "type": "object",
        "properties": { "value": { "type": "boolean" } },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "regularSoftenerInitialAmount": {
      "schema": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "type": "string", "enum": ["cc", "ea"] }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "regularSoftenerRemainingAmount": {
      "schema": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "type": "string", "enum": ["cc", "ea"] }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "regularSoftenerDosage": {
      "schema": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "type": "string", "enum": ["cc", "ea"] }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "regularSoftenerOrderThreshold": {
      "schema": {
        "type": "object",
        "properties": {
          "value": { "type": "number", "minimum": 0 },
          "unit": { "type": "string", "enum": ["cc", "ea"] }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    }
  },
  "commands": {
    "enableAlarm": {
      "name": "enableAlarm",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        }
      ],
      "sensitive": false
    },
    "setOrderThreshold": {
      "name": "setOrderThreshold",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        },
        {
          "name": "threshold",
          "optional": false,
          "schema": { "type": "number", "minimum": 0 }
        }
      ],
      "sensitive": false
    },
    "disableAlarm": {
      "name": "disableAlarm",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        }
      ],
      "sensitive": false
    },
    "setAutoReplenishment": {
      "name": "setAutoReplenishment",
      "arguments": [
        {
          "name": "autoReplenishment",
          "optional": false,
          "schema": {
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string", "enum": ["regularSoftener"] },
                "type": {
                  "type": "string",
                  "enum": ["none", "liquid", "capsule", "drySheet"]
                },
                "amount": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "initial": { "type": "number", "minimum": 0 },
                    "remaining": { "type": "number", "minimum": 0 },
                    "dosage": { "type": "number", "minimum": 0 }
                  }
                },
                "amountUnit": { "type": "string", "enum": ["cc", "ea"] },
                "alarmEnabled": { "type": "boolean" },
                "orderThreshold": { "type": "number", "minimum": 0 }
              },
              "required": [
                "name",
                "type",
                "amount",
                "amountUnit",
                "alarmEnabled"
              ]
            }
          }
        }
      ],
      "sensitive": false
    },
    "setInitialAmount": {
      "name": "setInitialAmount",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        },
        {
          "name": "amount",
          "optional": false,
          "schema": { "type": "number", "minimum": 0 }
        }
      ],
      "sensitive": false
    },
    "setRemainingAmount": {
      "name": "setRemainingAmount",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        },
        {
          "name": "amount",
          "optional": false,
          "schema": { "type": "number", "minimum": 0 }
        }
      ],
      "sensitive": false
    },
    "setDosage": {
      "name": "setDosage",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        },
        {
          "name": "amount",
          "optional": false,
          "schema": { "type": "number", "minimum": 0 }
        }
      ],
      "sensitive": false
    },
    "setType": {
      "name": "setType",
      "arguments": [
        {
          "name": "name",
          "optional": false,
          "schema": { "type": "string", "enum": ["regularSoftener"] }
        },
        {
          "name": "type",
          "optional": false,
          "schema": {
            "type": "string",
            "enum": ["none", "liquid", "capsule", "drySheet"]
          }
        }
      ],
      "sensitive": false
    }
  }
}
