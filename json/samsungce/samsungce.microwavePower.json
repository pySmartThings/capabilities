{
  "id": "samsungce.microwavePower",
  "version": 1,
  "status": "proposed",
  "name": "Microwave Power",
  "ephemeral": false,
  "attributes": {
    "supportedPowerLevels": {
      "schema": {
        "title": "Supported Power Levels",
        "type": "object",
        "properties": {
          "value": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^((0|[1-9][0-9]|100)%|\\d+W|high|medium|low)$"
            }
          }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    },
    "powerLevel": {
      "schema": {
        "title": "Power Level",
        "type": "object",
        "properties": {
          "value": {
            "type": "string",
            "pattern": "^((0|[1-9][0-9]|100)%|\\d+W|high|medium|low)$"
          }
        },
        "additionalProperties": false,
        "required": ["value"]
      },
      "enumCommands": []
    }
  },
  "commands": {
    "setPowerLevel": {
      "name": "setPowerLevel",
      "arguments": [
        {
          "name": "power",
          "optional": false,
          "schema": {
            "type": "string",
            "pattern": "^((0|[1-9][0-9]|100)%|\\d+W|high|medium|low)$"
          }
        }
      ],
      "sensitive": false
    }
  }
}
