      "name": "setWasherCyclePreset",
      "arguments": [
        {
          "name": "presets",
          "optional": false,
          "schema": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
              "^.{1,32}$": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "recipeId": { "type": "string" },
